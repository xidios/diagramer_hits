@model Subject;
@{
    ViewData["Title"] = "Task Page";
}
<div class="text-center">
    <h1>@Model.Name</h1>
    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
    {
        <a href='@Url.Action("CreateTask", "Task", new { subject_id = @Model.Id })'>Создать задание</a>
    }
</div>
@foreach (var task in @Model.Tasks)
{
    @if (task.IsVisible || User.IsInRole("Admin") || User.IsInRole("Teacher"))
    {
        <div>
            <h3>@Html.DisplayName(task.Name)</h3>
            @if (task.Deadline != null)
            {
                <h4>Дедлайн: @task.Deadline.ToString();</h4>
            }
            <a href='@Url.Action("ViewTask", "Task", new { id = task.Id })' class="btn btn-primary">Open</a>

        </div>
    }
}