@model Diagramer.Models.ViewModels.CreateCategoryViewModel;
@{
    ViewData["Title"] = "Создать категорию";
}

<form asp-action="CreateCategory" asp-controller="Category" method="post" enctype="multipart/form-data">
    <p>
        <input name="Name" type="text" placeholder="Название категории" class="form-control"/>
    </p>
    <p>
        <input type="submit" value="Добавить"/>
    </p>
</form>